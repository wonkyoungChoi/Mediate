<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sign_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/sign_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본정보 등록"
            android:textColor="#707070"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_user_profile"
        android:layout_below="@id/sign_top"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="95dp">

        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher_foreground" />
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/sign_mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cv_user_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp">

        <FrameLayout
            android:id="@+id/fl_select_school"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_select_school"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="학교를 선택해주세요."
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:textColor="#707070"
                android:background="@drawable/sign_up_edit"
                android:padding="20dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#707070"
                android:text=">"/>

        </FrameLayout>



        <FrameLayout
            android:id="@+id/fl_select_major"
            android:layout_below="@id/fl_select_school"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_select_major"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="전공을 선택해주세요."
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:textColor="#707070"
                android:background="@drawable/sign_up_edit"
                android:padding="20dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#707070"
                android:text=">"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_select_grade"
            android:layout_below="@id/fl_select_major"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_select_grade"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="지역을 선택해주세요."
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:textColor="#707070"
                android:background="@drawable/sign_up_edit"
                android:padding="20dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#707070"
                android:text=">"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_select_region"
            android:layout_below="@id/fl_select_grade"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_select_region"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="지역을 선택해주세요."
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:textColor="#707070"
                android:background="@drawable/sign_up_edit"
                android:padding="20dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#707070"
                android:text=">"/>

        </FrameLayout>




    </RelativeLayout>








</RelativeLayout>





