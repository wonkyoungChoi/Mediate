<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="102dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_launcher_background"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:maxLines="1"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cardview_profile"
        android:text="테스트 테스트 테스트"/>

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:maxLines="1"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text_name"
        android:text="튜터"/>

    <TextView
        android:id="@+id/text_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/cardview_profile"
        app:layout_constraintTop_toBottomOf="@id/text_type"
        android:text="가재울고등학교"/>

    <TextView
        android:id="@+id/text_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/text_school"
        app:layout_constraintTop_toBottomOf="@id/text_type"
        android:text="1학년"/>

    <SeekBar
        android:id="@+id/seekBar_percent"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardview_profile"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/text_tuturing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/main_blue"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar_percent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="튜터링"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/text_tutoring_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/main_blue"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar_percent"
        app:layout_constraintLeft_toRightOf="@id/text_tuturing"
        android:text="테스트"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/main_blue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar_percent"
        app:layout_constraintLeft_toRightOf="@id/text_tutoring_now"
        android:text=" / "/>

    <TextView
        android:id="@+id/text_tutoring_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/main_blue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar_percent"
        app:layout_constraintLeft_toRightOf="@id/slash"
        android:text="테스트"/>

    <TextView
        android:id="@+id/text_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="#999999"
        android:text="80%"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar_percent"
        app:layout_constraintRight_toLeftOf="@id/text_percent_desc"/>

    <TextView
        android:id="@+id/text_percent_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="#999999"
        android:text="진행"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar_percent"
        app:layout_constraintRight_toRightOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>